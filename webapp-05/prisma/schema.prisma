generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Bucket {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String
  items       Item[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Item {
  id        String   @id @default(uuid())
  slug      String   @unique
  name      String
  bucketId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bucket    Bucket   @relation(fields: [bucketId], references: [id], onDelete: Cascade)
}
